<div class="row row-cols-1 row-cols-md-2 g-4">
	<% @plans.each do |plan| %>
		<div class="col">
		  <div class="card">
		    <div class="card-body">
		      <h5 class="card-title">Plans</h5>
		      	<p class="lead">Name: <%= plan.name %></p>
		      	<p class="lead">Price: <%= plan.price %></p>
		      	<!--<p class="lead">User_id: <%#= plan.user_id %></p>-->
		      	<% if plan.activated? %>
		      		<%= link_to "Activated Plan", deactivate_plan_path(plan), method: :put, class: "btn btn-success btn-lg" %>
		      	<% else %>
		      		<%= link_to "Get Plan", activate_plan_path(plan), method: :put, class: "btn btn-primary btn-lg" %>
		      	<% end %>
		      	<%#= link_to "Get Plan", plan_path(plan), class: "btn btn-success" %>
		    </div>
		  </div>
		</div>
	<% end %>
</div>

