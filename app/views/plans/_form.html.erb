<%= form_with model: plan do |form| %>
	<div class="form-group">
		<%= form.label :name, style: "display: block" %>
		<%= form.text_field :name, class: "form-control form-control-lg" %>
	</div>
	<div class="form-group">
		<%= form.label :price, style: "display: block" %>
		<%= form.text_field :price, class: "form-control form-control-lg" %>
	</div>
	<div class="form-group">
	<%= form.hidden_field :user_id, value: current_user.id%>
	</div>
	<div class="form-group">
	<%= form.submit class: "btn btn-success mt-3" %>
	<%= link_to "Back", plans_path, class: "btn btn-outline-primary mt-3" %>
	</div>
<% end %>