<%= form_with model: plan do |form| %>
	<div class="form-group">
		<%= form.label :name, style: "display: block" %>
		<%= form.text_field :name, class: "form-control form-control-lg" %>
		<% @plan.errors.full_messages_for(:name).each do |message| %>
			<div class="text-danger"><%= message %></div>
		<% end %>
	</div>
	<div class="form-group">
		<%= form.label :price, style: "display: block" %>
		<%= form.text_field :price, class: "form-control form-control-lg" %>
		<% @plan.errors.full_messages_for(:price).each do |message| %>
			<div class="text-danger"><%= message %></div>
		<% end %>
	</div>
	<div class="form-group">
	<%= form.submit class: "btn btn-success mt-3" %>
	<%= link_to "Back", plans_path, class: "btn btn-outline-primary mt-3" %>
	</div>
<% end %>