<div class="col-lg-6 mx-auto">
  <div class="card">
    <div class="card-header"><h2 class="text-center">Sign up</h2></div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :full_name, class: "mb-2 mt-2" %>
          <%= f.text_field :full_name, class: "form-control form-control-lg" %>
          <% @user.errors.full_messages_for(:full_name).each do |message| %>
            <div class="text-danger"><%= message%></div>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :contact_number, class: "mb-2 mt-2" %>
          <%= f.text_field :contact_number, value: current_user.contact_number, class: "form-control form-control-lg" %>
          <% @user.errors.full_messages_for(:contact_number).each do |message| %>
            <div class="text-danger"><%= message%></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "mb-2 mt-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
          <% @user.errors.full_messages_for(:email).each do |message| %>
            <div class="text-danger"><%= message%></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "mb-2 mt-2" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
          <% @user.errors.full_messages_for(:password).each do |message| %>
            <div class="text-danger"><%= message%></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: "mb-2 mt-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
          <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
            <div class="text-danger"><%= message%></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign up", class: "btn btn-primary btn-lg mt-4 mb-2" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>



