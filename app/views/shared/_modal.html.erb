<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#example<%= question.id%>">
Show Answer
</button>

<!-- Modal -->
<div class="modal fade" id="example<%= question.id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModal<%= question.id%>">Question</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <p class="lead">Answer: <%= question.answer%></p>
          <h5><span class="badge rounded-pill text-bg-primary"><%= question.keyword%></span></h5>
          <div class="btn-group mt-3" role="group", aria-label="Like&Dislike">
            <%= link_to "Like", toggle_like_question_path(question), method: :post, class: "btn btn-success" %>
            <%= link_to "Dislike", toggle_dislike_question_path(question), method: :post, class: "btn btn-danger" %>
          </div>
          <!-- <p class="lead">Keyword: <%#= question.keyword%></p> -->
      </div>
      <div class="modal-footer">
        <%= link_to "Back", questions_path, class: "btn btn-outline-primary"%>
        <%# <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button> %>
      </div>
    </div>
  </div>
</div>